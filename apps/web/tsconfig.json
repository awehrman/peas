{
  "extends": "@peas/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./src/app/*"
      ],
      "@/components/*": [
        "./src/app/components/*"
      ],
      "@/lib/*": [
        "./src/app/lib/*"
      ],
      "@/paths": [
        "./src/paths"
      ],
      "react": [
        "./node_modules/@types/react"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
