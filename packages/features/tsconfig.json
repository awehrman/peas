{
  "extends": "@peas/typescript-config/react-library.json",
  "compilerOptions": {
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@peas/features/form": ["./src/form/index.ts"],
      "@peas/features/*": ["./src/*"]
    },
    "moduleResolution": "bundler",
    "module": "ESNext",
    "lib": ["es2022", "DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.css"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.d.ts",
    "**/*.d.ts.map",
    "**/*.js",
    "**/*.js.map",
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
