{
  "name": "@peas/tailwind",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup index.ts --format cjs,esm --dts --clean",
    "dev": "tsup index.ts --format cjs,esm --watch --dts --clean",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@peas/theme": "*",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@peas/eslint-config": "*",
    "@peas/typescript-config": "*",
    "@types/node": "^22.14.1",
    "tsup": "^8.0.2",
    "typescript": "^5.8.3"
  }
}
