{
  "name": "@peas/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "build": "tsc && node scripts/fix-imports.js && npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --minify",
    "dev": "concurrently \"tsc --watch\" \"node scripts/watch-and-fix.js\"",
    "watch": "concurrently \"tsc --watch\" \"npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --watch\"",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "@peas/eslint-config": "*",
    "@peas/typescript-config": "*",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.25.0",
    "lucide-react": "^0.525.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.7",
    "tailwindcss-animate": "^1.0.7",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.7",
    "postcss": "^8.5.3",
    "react": "^19.1.2",
    "react-dom": "^19.1.2",
    "react-error-boundary": "^6.0.0",
    "tw-animate-css": "^1.3.5"
  },
  "peerDependencies": {
    "react": "^19.1.2",
    "react-dom": "^19.1.2"
  }
}
